<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrey"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.cybermergina.myapplication.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:id="@+id/dateTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2017/06/01(Fri) 21:00:00"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/actionBtnPanel"
            android:layout_below="@+id/dateTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/actionBtnTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="さぁこい！"
                android:textSize="21dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:id="@+id/actionBtn"
                android:layout_below="@+id/actionBtnTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/inBtn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_dark"
                    android:text="ｼｭｯｼｬ"
                    android:textColor="@android:color/white"
                    android:layout_margin="20dp"
                    />


                <Button
                    android:id="@+id/outBtn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_dark"
                    android:text="ﾀｲｼｬ"
                    android:textColor="@android:color/white"
                    android:layout_margin="20dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detailPanel"
            android:layout_below="@+id/actionBtnPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/detailPanelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="じょうきょう"
                android:textSize="21dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:id="@+id/monthText"
                android:layout_below="@+id/detailPanelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="６月"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sumWorkTime"
                android:layout_below="@+id/monthText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/sumWorkTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="総労働時間： 170.5 h"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/listBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sumWorkTime"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:onClick="showList"
                android:text="一覧" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
